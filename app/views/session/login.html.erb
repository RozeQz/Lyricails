<% provide :page_title, 'Log in' %>

<style>
  .container{
    padding-top: 70px;
  }
  .input-label{
    padding-bottom: 16px;
    font-family: var(--bs-font-sans-serif);
    /* color: #0d6efd; */
  }
</style>

<div class="container">

  <h1 class="text-center input-label"><%= t('.form.title') %></h1>

  <%= form_with url: session_create_url, class: 'col-4 d-flex flex-column justify-content-center m-auto', method: :post, local:true do |form| %>

    <div class="form-group pb-3 pt-10">
      <%= form.text_field :username, placeholder: t('.form.username'), class: 'form-control', required: true%>
    </div>

    <div class="form-group pb-3">
      <%= form.password_field :password, placeholder: t('.form.password'), class: 'form-control', required: true%>
    </div>

    <div class="form-group pt-3 pb-3 text-center">
      <%= form.submit t('.form.login'), class: 'btn btn-primary' %>
    </div>

  <% end %>
  <p class="text-dark text-center pt-3">
        <%= t('.label') %>
        <%= link_to t('.form.register'), new_user_path %>
  </p>
</div>