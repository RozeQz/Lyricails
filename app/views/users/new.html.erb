<% provide :page_title, 'Registration' %>

<style>
  .container{
    padding-top: 70px;
  }
  .registration-label{
    padding-bottom: 16px;
  }
  .form-settings{
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin: auto;
  }
  .form-button{
    text-align: center;
  }
  li{
    list-style-type: none;
  }
</style>

<%= render 'shared/errors', object: @user %>

<li class="dropdown language-form">
  <%= link_to '#', class: 'nav-link px-2 dropdown-toggle text-dark', id: 'locale-btn', data: {"bs-toggle": 'dropdown'} do %>
    <%= tag.div '', class: "flag #{I18n.locale}-flag mt-1" %>
    <%= t I18n.locale %>
  <% end %>
  <ul class="dropdown-menu">
    <% I18n.available_locales.each do |locale| %>
      <li>
        <% if I18n.locale == locale %>
          <%= tag.span t(locale), class: 'dropdown-item', id: locale %>
        <% else %>
          <%= link_to t(locale), new_user_path(locale: locale), class: 'dropdown-item', id: locale %>
        <% end %>
      </li>
    <% end %>
  </ul>
</li>

<div class="container">
  <h1 class="text-center registration-label"><%= t('.title') %></h1>

  <%= render 'form', user: @user %>

  <p class="text-dark text-center pt-3">
    <%= t('.label') %>
    <a class="text-link" href="/session/login"><%= t('.login') %></a>
  </p>
</div>

