<%= form_with model: user, class: 'col-4 form-settings' do |form| %>
  <div class="form-group pb-3 pt-10">
    <%= form.text_field :username, placeholder: 'Имя пользователя', class: 'form-control', required: true%>
  </div>

  <div class="form-group pb-3">
    <%= form.email_field :email, placeholder: 'name@example.com', class: 'form-control', required: true%>
  </div>

  <div class="form-group pb-3">
    <%= form.password_field :password, placeholder: 'Пароль', class: 'form-control', required: true%>
  </div>

  <div class="form-group pb-3">
    <%= form.password_field :password_confirmation, placeholder: 'Подтверждение пароля', class: 'form-control' %>
  </div>

  <% unless user.new_record? %>
    <div class="form-group pb-3">
      <%= form.password_field :old_password, placeholder: 'Старый пароль', class: 'form-control', required: true%>
    </div>
  <% end %>

  <div class="form-group pb-3 mt-3 form-button">
      <%= form.submit (user.new_record? ? 'Зарегистрироваться' : 'Сохранить'), class: 'btn btn-primary' %>
  </div>

<% end %>

