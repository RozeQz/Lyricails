<%= form_with model: post, html: {multipart: true}, class: 'col-4 form-settings' do |form| %>

  <div class="form-group pb-3">
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: 'Title', class: 'form-control', required: true %>
  </div>

  <div class="form-group pb-3">
    <%= form.label :lyrics %>
    <%= form.text_area :lyrics, placeholder: 'Song lyrics', class: 'form-control', rows: '18' %>
  </div>

  <div class="form-group pb-3">
    <%= form.file_field :music, direct_upload: true, class: 'form-control' %>
  </div>

  <div class="form-group pb-3 mt-3 form-button">
    <%= form.submit (post.new_record? ? 'Post' : 'Save'), class: 'btn btn-primary' %>
  </div>
  
<% end %>

<%= link_to 'Cancel', posts_path, class: 'btn btn-outline-danger' %>