<%= form_with model: post, class: 'col-4 form-settings' do |form| %>

  <div class="form-group pb-3">
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: 'Название', class: 'form-control', required: true %>
  </div>

  <div class="form-group pb-3">
    <%= form.label :lyrics %>
    <%= form.text_area :lyrics, placeholder: 'Текст песни', class: 'form-control' %>
  </div>

  <div class="form-group pb-3 mt-3 form-button">
    <%= form.submit (post.new_record? ? 'Выложить' : 'Сохранить'), class: 'btn btn-primary' %>
  </div>
  
<% end %>